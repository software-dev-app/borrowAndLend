@model IEnumerable<borrowAndLend.Models.Item>

<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Borrowed Item List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Item" asp-action="Create" class="btn btn-primary">Create new Item</a>
        </div>
    </div>
    <div class="row">
    @if(Model.Count() > 0)
            {
                 <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Item Name</th>
                    <th>Borrower</th>
                    <th>Lender</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                      <td width="35%">@item.ItemName</td>
                      <td width="35%">@item.Borrower</td>
                      <td width="35%">@item.Lender</td>
                      <td width="35%">
                          <div class="btn-group" role="group" >
                              <a asp-controller="Item" asp-action="Update" asp-route-Id="@item.Id"  class="btn btn-primary">Update</a>
                              <a asp-controller="Item" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                          </div>
                      </td>
                    </tr>
                }
                
            </tbody>
        </table>
            }
            else
            {
                <p>No data yet</p>
            }
    </div>
</div>

