@model IEnumerable<borrowAndLend.Models.ExpenseCategory>

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-6">
                <h2 class="card-title">Expense Categories</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-controller="ExpenseCategory" asp-action="Create" class="btn btn-primary">Create Category</a>
            </div>
        </div>
        
        @if(Model.Count() > 0)
            {


            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Category Name</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var expenseategory in Model) 
                    {
                       <tr>
                           <td width="35%">@expenseategory.Id</td>
                           <td width="35%">@expenseategory.CategoryType</td>
                           <td width="25%">
                               <a asp-controller="ExpenseCategory" asp-action="Update" asp-route-Id="@expenseategory.Id" class="btn btn-primary">Update</a>
                               <a asp-controller="ExpenseCategory" asp-action="Delete" asp-route-id="@expenseategory.Id" class="btn btn-danger">Delete</a>
                           </td>
                       </tr>
                    }
                   
                </tbody>
            </table>
            }
            else
            {
                <p>No data yet</p>
            }
    </div>
</div>

