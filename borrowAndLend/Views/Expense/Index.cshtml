@model IEnumerable<borrowAndLend.Models.Expense>

<div class="container">
    <div class="card">
        <div class="card-body">
           <div class="row">
               <div class="col-6">
                   <h2 class="card-title text-primary">Card title</h2>
               </div>
               <div class="col-6 text-right">
                   <a asp-controller="Expense" asp-action="Create" class="btn btn-primary">Add New Expense</a>
               </div>
           </div>
           <div class="row">
             @if(Model.Count() > 0)
            {


<table class="table table-bordered table-striped">
                       <thead>
                           <tr>
                               <th scope="col">Expense</th>
                               <th scope="col">Amount</th>
                               <th scope="col">Actions</th>
                           </tr>
                       </thead>
                       <tbody>
                           @foreach (var expense in Model) 
                           {
                             <tr>
                                 <td width="35%">@expense.ExpenseName</td>
                                 <td width="35%">@expense.Amount</td>
                                 <td>
                                     <div class="btn-group" role="group">
                                         <a asp-controller="Expense" asp-action="Update" asp-route-Id="@expense.Id" class="btn btn-info">Update</a>
                                         <a asp-controller="Expense" asp-action="Delete" asp-route-Id="@expense.Id" class="btn btn-danger">Delete</a>
                                     </div>
                                 </td>
                             </tr>
                           }
                       </tbody>
                   </table>
            }
            else
            {
                <p>No data entries yet</p>
            }
             
           </div>
          
        </div>
    </div>
</div>

